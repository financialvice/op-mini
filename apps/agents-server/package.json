{
  "name": "@camglynn/agents-server",
  "version": "0.1.17",
  "type": "module",
  "description": "Unified server for Claude Code and Codex coding agents",
  "license": "MIT",
  "bin": {
    "agents-server": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./models": {
      "import": "./dist/models.js",
      "types": "./dist/models.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:fix:unsafe": "biome check . --unsafe --write",
    "typecheck": "tsgo --noEmit",
    "typecheck:legacy": "tsc --noEmit",
    "build": "tsup",
    "dev": "bun run --watch src/index.ts",
    "populate-models": "bun run scripts/populate-models.ts",
    "prepublishOnly": "bun run build"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.41",
    "@elysiajs/cors": "^1.4.0",
    "elysia": "^1.4.16",
    "@anthropic-ai/claude-agent-sdk": "^0.1.75",
    "@openai/codex-sdk": "^0.75.0",
    "@elysiajs/eden": "^1.4.5"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/agents-core": "workspace:*",
    "tsup": "catalog:"
  }
}
